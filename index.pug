                nav.footer-links
                    ul.footer-items
                        li.footer-item
                            a(href="#")
                            img(src="img/instagram.png" width="40px" height="40px")
                        li.footer-item
                            a(href="#")
                            img(src="img/telegram.png" width="40px" height="40px")
                        li.footer-item
                            a(href="#")
                            img(src="img/discord.png" width="40px" height="40px") 
                        li.footer-item
